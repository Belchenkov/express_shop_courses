<div class="row">
    <div class="col s8 offset-s3">
        {{#if error}}
            <p class="alert-danger">{{{error}}}</p>
        {{/if}}

        <h1 class="text-center">Задать новый пароль</h1>
        <form action="/auth/password" method="post">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock</i>
                    <input
                            id="password"
                            type="password"
                            class="validate"
                            required
                            name="password"
                    >
                    <label for="password">Новый пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <!-- csrf -->
                <input type="hidden" name="_csrf" value="{{csrf}}" />
                <input type="hidden" name="userId" value="{{userId}}" />
                <input type="hidden" name="token" value="{{token}}" />

                <div class="col offset-s5 s12 mt-1">
                    <button class="btn red darken-1 waves-light">
                        Обновить пароль
                        <i class="material-icons left">autorenew
                        </i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
