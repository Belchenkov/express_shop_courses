<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
            <img
                src="{{user.avatarUrl}}"
                alt="Аватар-{{user.name}}"
                class="avatar"
            >
        {{else}}
            <p>Аватара нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p class="mb-3">
                <i class="material-icons left">email</i>
                <b>Ваш email:</b> <i>{{user.email}}</i>
            </p>
            <div class="input-field">
                <input
                        id="name"
                        type="text"
                        class="validate"
                        required
                        name="name"
                        value="{{user.name}}"
                >
                <label for="name">Ваше имя</label>
                <span class="helper-text" data-error="Имя не может быть пустым"></span>
            </div>
            <div class="file-field input-field mb-3">
                <div class="btn yellow darken-4">
                    <i class="material-icons left">add_a_photo</i>
                    <span>Аватар</span>
                    <input
                            type="file"
                            name="avatar"
                    >
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <!-- csrf -->
            <input type="hidden" name="_csrf" value="{{csrf}}" />

            <button type="submit" class="btn light-blue darken-3 waves-light">
                Изменить
                <i class="material-icons left">border_color</i>
            </button>
        </form>
    </div>
</div>