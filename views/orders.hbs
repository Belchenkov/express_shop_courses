<h1>Мои заказы</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title card-header-color">
                         <i class="material-icons mr-1">shopping_cart</i>
                        Заказ <small class="ml-1">№ {{_id}}</small>
                    </span>
                    <div class="d-flex-r mt-1">
                        <p>
                            <i class="material-icons mr-1">date_range</i>
                        </p>
                        <p class="date">{{date}}</p>
                    </div>
                    <p class="d-flex-r">
                        <i class="material-icons mr-1">email</i>
                        <em class="mr-1">{{user.userId.name}}</em> ({{user.userId.email}})</p>
                    <ol>
                        {{#each courses}}
                            <li>
                                {{course.title}} (x<strong>{{count}}</strong>)
                            </li>
                        {{/each}}
                    </ol>
                    <hr />
                    <p>Всего на сумму: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов пока нет</p>
{{/if}}