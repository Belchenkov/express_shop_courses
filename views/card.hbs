<h1>Корзина</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small red js-remove" data-id="{{id}}">
                            <i class="material-icons left">delete</i>
                            Удалить
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p><strong>Всего на сумму:</strong> <span class="price">{{price}}</span></p>

        <form action="/orders" method="post">
            <button type="submit" class="btn green lighten-2">
                <i class="material-icons left">monetization_on</i>
                Сделать заказ
            </button>
        </form>
    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>
